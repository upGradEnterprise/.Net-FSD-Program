@{
    ViewData["Title"] = "Edit Employee";
}

<h3>Edit Employee Details</h3>
<hr />

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

   @*  
        <div class="form-group">
        <label asp-for="Id" class="form-label"></label>
